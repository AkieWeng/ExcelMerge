<UserControl x:Class="ExcelMerge.GUI.Views.FolderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vc="clr-namespace:ExcelMerge.GUI.ValueConverters"
             xmlns:local="clr-namespace:ExcelMerge.GUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <vc:FileMatchToColorConverter x:Key="FileMatchToColorConverter"/>
        <vc:FilePathToFileNameConverter x:Key="FilePathToFileNameConverter"/>
        <CollectionViewSource x:Key="SrcFilesViewSource" Source="{Binding SrcExcelFiles}" />
        <CollectionViewSource x:Key="DstFilesViewSource" Source="{Binding DstExcelFiles}" />
    </UserControl.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="45*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="10,10,10,0" Orientation="Horizontal">

            <Button x:Name="SrcFolderButton" Content="选择源文件夹" Margin="10"  Height="30" Padding="5,5" Width="100" Click="SrcFolderButton_Click"/>
            <TextBox Text="{Binding SrcFolderPath}" Margin="5" VerticalAlignment="Center" Height="30" Padding="3" FontSize="16" Width="{Binding Path=ActualWidth, RelativeSource={RelativeSource AncestorType=Window}, Converter={vc:PercentageConverter}, ConverterParameter='0.30'}"/>
            <Button x:Name="DstFolderButton" Content="选择目标文件夹" Margin="10" Height="30" Padding="5,5" Width="100" Click="DstFolderButton_Click"/>
            <TextBox Text="{Binding DstFolderPath}" Margin="5" VerticalAlignment="Center" Height="30" Padding="3" FontSize="16" Width="{Binding Path=ActualWidth, RelativeSource={RelativeSource AncestorType=Window}, Converter={vc:PercentageConverter}, ConverterParameter='0.30'}"/>

        </StackPanel>

        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <ScrollViewer x:Name="SrcScrollViewer" Grid.Column="0" Margin="10" VerticalScrollBarVisibility="Auto" ScrollChanged="SrcScrollViewer_ScrollChanged">
                <ListBox ItemsSource="{Binding AlignedFiles}"  MouseDoubleClick="ListBox_MouseDoubleClick">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding SrcFile}" Foreground="{Binding IsMatched, Converter={StaticResource FileMatchToColorConverter}}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>

            <ScrollViewer x:Name="DstScrollViewer" Grid.Column="1" Margin="10" VerticalScrollBarVisibility="Auto" ScrollChanged="DstScrollViewer_ScrollChanged">
                <ListBox ItemsSource="{Binding AlignedFiles}"  MouseDoubleClick="ListBox_MouseDoubleClick">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DstFile}"  Foreground="{Binding IsMatched, Converter={StaticResource FileMatchToColorConverter}}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </Grid>

    </Grid>
</UserControl>
