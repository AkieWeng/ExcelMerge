<UserControl x:Class="ExcelMerge.GUI.Views.FolderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vc="clr-namespace:ExcelMerge.GUI.ValueConverters"
             xmlns:local="clr-namespace:ExcelMerge.GUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <vc:FileExistenceMultiConverter x:Key="FileExistenceMultiConverter"/>
        <vc:FilePathToFileNameConverter x:Key="FilePathToFileNameConverter"/>
        <CollectionViewSource x:Key="SrcFilesViewSource" Source="{Binding SrcExcelFiles}" />
        <CollectionViewSource x:Key="DstFilesViewSource" Source="{Binding DstExcelFiles}" />
    </UserControl.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="45*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="10,10,10,0" Orientation="Horizontal">

            <Button x:Name="SrcFolderButton" Content="选择源文件夹" Margin="10"  Height="30" Padding="5,5" Width="100" Click="SrcFolderButton_Click"/>
            <TextBox Text="{Binding SrcFolderPath}" Margin="5" VerticalAlignment="Center" Height="30" Padding="5" FontSize="16" Width="{Binding Path=ActualWidth, RelativeSource={RelativeSource AncestorType=Window}, Converter={vc:PercentageConverter}, ConverterParameter='0.20'}"/>
            <Button x:Name="DstFolderButton" Content="选择目标文件夹" Margin="10" Height="30" Padding="5,5" Width="100" Click="DstFolderButton_Click"/>
            <TextBox Text="{Binding DstFolderPath}" Margin="5" VerticalAlignment="Center" Height="30" Padding="5" FontSize="16" Width="{Binding Path=ActualWidth, RelativeSource={RelativeSource AncestorType=Window}, Converter={vc:PercentageConverter}, ConverterParameter='0.20'}"/>
            <Button x:Name="FolderDiffButton" Content="提取差异" Margin="10" Height="30" Padding="5,5" Width="100"/>

        </StackPanel>

        <ListBox Grid.Row="1" Grid.Column="0" Margin="10" ItemsSource="{Binding Source={StaticResource SrcFilesViewSource}}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock.Text>
                            <Binding Converter="{StaticResource FilePathToFileNameConverter}"/>
                        </TextBlock.Text>
                        <TextBlock.Foreground>
                            <MultiBinding Converter="{StaticResource FileExistenceMultiConverter}">
                                <Binding Path="." />
                                <Binding Path="DataContext.DstExcelFiles" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                            </MultiBinding>
                        </TextBlock.Foreground>
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ListBox Grid.Row="1" Grid.Column="2" Margin="10" ItemsSource="{Binding Source={StaticResource DstFilesViewSource}}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock.Text>
                            <Binding Converter="{StaticResource FilePathToFileNameConverter}"/>
                        </TextBlock.Text>
                        <TextBlock.Foreground>
                            <MultiBinding Converter="{StaticResource FileExistenceMultiConverter}">
                                <Binding Path="." />
                                <Binding Path="DataContext.SrcExcelFiles" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                            </MultiBinding>
                        </TextBlock.Foreground>
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


    </Grid>
</UserControl>
